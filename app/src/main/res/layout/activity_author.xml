<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:paddingBottom="30dp"
    tools:context="com.delta.campuscomm.AuthorActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textView_userName_author"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical"
            android:text="USERNAME"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/editText_userName_author"
            android:layout_width="fill_parent"
            android:background="@drawable/edittext_bg"
            android:layout_height="45dp"
            android:layout_below="@+id/textView_userName_author"
            android:layout_centerHorizontal="true"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView_password_author"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText_userName_author"
            android:gravity="center_vertical"
            android:text="PASSWORD"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/editText_password_author"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="@drawable/edittext_bg"
            android:layout_below="@+id/textView_password_author"
            android:layout_centerHorizontal="true"
            android:password="true"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_login_author"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:alpha=".75"
            android:background="@drawable/shadow"
            android:elevation="10dp"
            android:textColor="#ffffff"
            android:onClick="submit"
            android:text="LOGIN"
            android:textSize="30dp"
            android:translationZ="10dp"
            android:typeface="monospace" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:progressDrawable="@drawable/circular_progress_bar" />
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>

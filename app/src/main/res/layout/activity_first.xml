<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/c">

    <ImageView
        android:layout_width="190dp"
        android:layout_height="fill_parent"
        android:layout_above="@+id/button2"
        android:id="@+id/imagegif1"
        android:background="@drawable/g1" />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="fill_parent"
        android:layout_above="@+id/button2"
        android:layout_toRightOf="@+id/imagegif1"
        android:id="@+id/imagegif2"
        android:background="@drawable/g2" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:text="ENTER"
        android:id="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:alpha="0.5"
        android:background="#63611e"
        android:textSize="50dp"
        android:textColor="#c5ff2d"
        android:onClick="enter" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/delta" />


</RelativeLayout>

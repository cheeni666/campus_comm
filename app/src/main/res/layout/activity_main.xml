<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#c1b8b8">

    <Button
        android:id="@+id/button_enter_main"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="@drawable/round_bg_blue"
        android:padding="0dp"
        android:text="ENTER"
        android:textColor="#b6ffd0"
        android:textSize="50dp"
        android:layout_above="@+id/slogan"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/imageView_delta_main"
        android:layout_width="300sp"
        android:layout_height="300sp"
        android:background="@drawable/delta"
        android:layout_above="@+id/button_enter_main"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/slogan"
        android:id="@+id/slogan"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_selector">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="USERNAME"
        android:id="@+id/custom_username_text"
        android:typeface="serif"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/custom_colorstrip_image"
        android:textSize="20px"
        android:layout_marginLeft="10px"
        android:layout_marginTop="10px"
        android:textColor="#000000" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TIMESTAMP"
        android:id="@+id/custom_time_text"
        android:typeface="sans"
        android:layout_below="@+id/custom_username_text"
        android:layout_toRightOf="@+id/custom_colorstrip_image"
        android:textSize="20px"
        android:layout_marginLeft="10px"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MESSAGE"
        android:id="@+id/custom_mes_text"
        android:layout_below="@+id/custom_time_text"
        android:layout_toRightOf="@+id/custom_colorstrip_image"
        android:textSize="40px"
        android:layout_marginLeft="10px"
        android:layout_marginBottom="10px"
        android:textColor="#000000" />

    <ImageView
        android:layout_width="10px"
        android:layout_height="wrap_content"
        android:id="@+id/custom_colorstrip_image"
        android:layout_marginLeft="5px"
        android:layout_alignTop="@+id/custom_username_text"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/custom_mes_text"
        android:background="#0044ff" />
</RelativeLayout>